<package>
  <description brief="KinectScanMatching">

    A wrapper around Polar Scan Matcher by Albert Diosi and Lindsay Kleeman, used for laser scan registration.

  </description>
  <author>Ivan Dryanovski</author>
  <license>GPL</license>
  <review status="unreviewed" notes=""/>
  <url>http://ros.org/wiki/polar_scan_matcher</url>
  <depend package="tf"/>
  <depend package="roscpp"/>
  <depend package="sensor_msgs"/>
  <depend package="geometry_msgs"/>
  <depend package="pcl"/>
  <depend package="message_filters"/>
  <depend package="visualization_msgs"/>
  <depend package="nodelet"/>
  <depend package="pcl_ros"/>

  <export>
    <nodelet plugin="${prefix}/laser_ortho_projector_nodelet.xml" />
  </export>

</package>


